<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="aydin.firebasedemo.PrimaryController"
      alignment="CENTER"
      spacing="20"
      styleClass="root"
      stylesheets="@styles.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="Data Access Screen" styleClass="title-label"/>

    <!-- Form Container -->
    <VBox styleClass="container" spacing="15" alignment="CENTER">

        <!-- Input Fields -->
        <VBox styleClass="input-row" spacing="5">
            <Label text="Name:"/>
            <TextField fx:id="nameTextField" promptText="Enter name" prefWidth="300"/>
        </VBox>

        <VBox styleClass="input-row" spacing="5">
            <Label text="Age:"/>
            <TextField fx:id="ageTextField" promptText="Enter age" prefWidth="300"/>
        </VBox>

        <VBox styleClass="input-row" spacing="5">
            <Label text="Phone:"/>
            <TextField fx:id="phoneTextField" promptText="Enter phone number" prefWidth="300"/>
        </VBox>

        <!--  Buttons  -->
        <HBox styleClass="button-row" spacing="15" alignment="CENTER">
            <Button fx:id="writeButton" text="Write to DB" onAction="#writeButtonClicked" prefWidth="140"/>
            <Button fx:id="readButton" text="Read from DB" onAction="#readButtonClicked" styleClass="secondary" prefWidth="140"/>
        </HBox>

        <!-- Database Output -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Database Contents:" styleClass="section-label"/>
            <TextArea fx:id="outputTextArea" prefHeight="200" prefWidth="350" editable="false"/>
        </VBox>

        <!-- Navigation -->
        <Button fx:id="switchSecondaryViewButton" text="Switch to Secondary View"
                onAction="#switchToSecondary" styleClass="secondary" prefWidth="200"/>
    </VBox>
</VBox>